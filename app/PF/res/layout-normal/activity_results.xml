<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/SearchLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TitleActivity" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="315dp"
        android:layout_weight="0.97" >

        <com.esri.android.map.MapView
            android:id="@+id/map"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >
        </com.esri.android.map.MapView>

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageButton
                android:id="@+id/PositionButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/trans"
                android:src="@drawable/button_myloc" />

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.34" >

                <TextView
                    android:id="@+id/PageTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="@string/results"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000000" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/CompassImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="@string/image_error"
                android:src="@drawable/compass" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom" >

                <ImageButton
                    android:id="@+id/FindButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/trans"
                    android:src="@drawable/buttonfind" />

                <ImageButton
                    android:id="@+id/NavigateButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/trans"
                    android:src="@drawable/navigate" />

                <ImageButton
                    android:id="@+id/FavouritesButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/trans"
                    android:src="@drawable/buttonstar" />
            </LinearLayout>

            <ImageView
                android:id="@+id/FloorView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:src="@drawable/trans" />
        </FrameLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/LayoutResults"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:id="@+id/LayoutResultsL"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/LayoutResult1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <FrameLayout
                        android:id="@+id/LayoutNum1"
                        android:layout_width="50dp"
                        android:layout_height="50dp" >

                        <ImageButton
                            android:id="@+id/ButtonNum1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/trans"
                            android:src="@drawable/rngb" />

                        <TextView
                            android:id="@+id/TextNum1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Nº1"
                            android:textAppearance="?android:attr/textAppearanceMedium" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/LayoutID1"
                        android:layout_width="110dp"
                        android:layout_height="50dp" >

                        <ImageButton
                            android:id="@+id/ButtonID1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/trans"
                            android:src="@drawable/rngb2" />

                        <TextView
                            android:id="@+id/TextID1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Medium Text"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textSize="12sp" />

                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LayoutResult3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <FrameLayout
                        android:id="@+id/LayoutNum3"
                        android:layout_width="50dp"
                        android:layout_height="50dp" >

                        <ImageButton
                            android:id="@+id/ButtonNum3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/trans"
                            android:src="@drawable/rngb" />

                        <TextView
                            android:id="@+id/TextNum3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Nº1"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/LayoutID3"
                        android:layout_width="110dp"
                        android:layout_height="50dp" >

                        <ImageButton
                            android:id="@+id/ButtonID3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/trans"
                            android:src="@drawable/rngb2" />

                        <TextView
                            android:id="@+id/TextID3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Medium Text"
                            android:textAppearance="?android:attr/textAppearanceMedium" 
                            android:textSize="12sp"/>

                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LayoutResultsR"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/LayoutResult2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <FrameLayout
                        android:id="@+id/LayoutNum2"
                        android:layout_width="50dp"
                        android:layout_height="50dp" >

                        <ImageButton
                            android:id="@+id/ButtonNum2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/trans"
                            android:src="@drawable/rngb" />

                        <TextView
                            android:id="@+id/TextNum2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Nº1"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/LayoutID2"
                        android:layout_width="110dp"
                        android:layout_height="50dp" >

                        <ImageButton
                            android:id="@+id/ButtonID2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/trans"
                            android:src="@drawable/rngb2" />

                        <TextView
                            android:id="@+id/TextID2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Medium Text"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textSize="12sp" />

                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LayoutResult4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <FrameLayout
                        android:id="@+id/LayoutNum4"
                        android:layout_width="50dp"
                        android:layout_height="50dp" >

                        <ImageButton
                            android:id="@+id/ButtonNum4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/trans"
                            android:src="@drawable/rngb" />

                        <TextView
                            android:id="@+id/TextNum4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Nº1"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/LayoutID4"
                        android:layout_width="110dp"
                        android:layout_height="50dp" >

                        <ImageButton
                            android:id="@+id/ButtonID4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/trans"
                            android:src="@drawable/rngb2" />

                        <TextView
                            android:id="@+id/TextID4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Medium Text"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textSize="12sp" />

                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/PageLayout"
            android:layout_width="match_parent"
            android:layout_height="24dp" >

            <ImageButton
                android:id="@+id/PrevButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/trans"
                android:src="@drawable/left" />

            <FrameLayout
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:layout_weight="0.43" >

                <TextView
                    android:id="@+id/PageText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="TextView" />
            </FrameLayout>

            <ImageButton
                android:id="@+id/PostButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/trans"
                android:src="@drawable/right" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>