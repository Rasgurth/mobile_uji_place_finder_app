<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/TitleLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TitleActivity" >

    <FrameLayout
        android:id="@+id/menuPersonLayout"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/menuPlaceLayout"
        android:layout_marginRight="22dp" >

        <TextView
            android:id="@+id/menuPersonTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/PeopleButton"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="40sp" />

        <ImageButton
            android:id="@+id/menuPersonImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/trans"
            android:src="@drawable/buttonperson_great" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/menuPlaceLayout"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="250dp" >

        <TextView
            android:id="@+id/menuPlaceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/PlaceButton"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="40sp" />

        <ImageButton
            android:id="@+id/menuPlaceImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/trans"
            android:src="@drawable/buttonplace_great" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/menuFacilitiesLayout"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="200dp" >

        <TextView
            android:id="@+id/menuFacilitiesTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/FacilitiesButton"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="40sp" />

        <ImageButton
            android:id="@+id/menuFacilitiesImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/trans"
            android:src="@drawable/buttonequip_great" />
    </FrameLayout>

    <TextView
        android:id="@+id/menuTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/SearchTitle"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="45sp" />

</RelativeLayout>